<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="0dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pop_up_menu_container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="156dp"
        android:layout_height="196dp"
        android:orientation="vertical"
>
    <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="start|center"
            android:id="@+id/popupMenu_layout_edit"
            android:drawableStart="@drawable/popup_menu_edit_item"
            android:drawablePadding="@dimen/pop_menu_item_padding"
            android:text="Edit"
            android:padding="@dimen/pop_menu_item_padding"
            android:background="?android:attr/selectableItemBackground"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
    /><!--</androidx.cardview.widget.CardView>-->
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="8dp"
          android:background="?android:attr/listDivider"
          android:layout_marginEnd="8dp"
    />
    <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">-->
    <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:gravity="start|center"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/popup_menu_delete_item"
            android:drawablePadding="@dimen/pop_menu_item_padding"
            android:id="@+id/popupMenu_layout_delete"
            android:background="?android:attr/selectableItemBackground"
            android:text="Delete"
            android:padding="@dimen/pop_menu_item_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
    />
    <!--</androidx.cardview.widget.CardView>-->
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="8dp"
          android:background="?android:attr/listDivider"
          android:layout_marginEnd="8dp"
    />
    <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="start|center"
            android:background="?android:attr/selectableItemBackground"
            android:text="Edit title"
            android:id="@+id/popupMenu_layout_editTitle"
            android:drawableStart="@drawable/popup_menu_edit_title_item"
            android:drawablePadding="@dimen/pop_menu_item_padding"
            android:padding="@dimen/pop_menu_item_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
    /><!--</androidx.cardview.widget.CardView>-->
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?android:attr/listDivider"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
    />
    <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->
    <TextView
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="start|center"
            android:text="Share"
            android:id="@+id/popupMenu_layout_share"
            android:padding="@dimen/pop_menu_item_padding"
            android:drawableStart="@drawable/popup_menu_share_item"
            android:drawablePadding="@dimen/pop_menu_item_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
    /><!--</androidx.cardview.widget.CardView>-->
</LinearLayout>
</com.google.android.material.card.MaterialCardView>