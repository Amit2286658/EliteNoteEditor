<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?backgroundColor"
    android:id="@+id/main_search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/custom_search_view_window"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/top_most_status_bar"
            android:layout_height="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="?android:attr/actionBarSize">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/custom_search_view_back_button"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/custom_search_view_app_icon"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circular_corner_rectangle"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:id="@+id/custom_search_view_search_icon_hint"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_new_search_black_24dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:ellipsize="end"
            android:id="@+id/custom_search_view_edittext"
            android:hint="@string/searchable_hint"
            android:gravity="bottom"
            android:backgroundTint="@android:color/transparent"
            tools:targetApi="lollipop" />
            <ImageView
                android:layout_width="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:id="@+id/custom_search_edittext_clear_button"
                android:layout_marginBottom="8dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clear_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical|end"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_new_search_black_24dp"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="4dp"
            android:paddingLeft="8dp"
            android:id="@+id/custom_search_view_search_button"
            android:paddingRight="8dp"
            android:background="@drawable/circular_corner_rectangle"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mic_black_24dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/circular_corner_rectangle"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/custom_search_view_mic_button"
            android:layout_gravity="center" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/suggestion_container"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/custom_search_view_empty_search_result"
        android:ellipsize="end"
        android:text="@string/empty_search_text"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"/>
    <com.me.android.noteeditor.CommonUtility.custom_recycle_view
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/custom_search_view_recycler_view"
        android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
