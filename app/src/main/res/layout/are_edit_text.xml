<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.chinalwb.are.AREditText
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="16sp"
        android:id="@+id/addActivityRecyclerContent_editText"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/addActivityRecyclerContent_image"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/play"
        android:id="@+id/addActivityRecyclerContent_videoIcon"
        />
    <TextView
        android:text="@string/close_button"
        android:padding="4dp"
        android:id="@+id/addActivityRecyclerContent_clearButton"
        android:textColor="#f5f5f5"
        android:textSize="14sp"
        android:layout_marginEnd="4dp"
        android:background="#b4212121"
        android:drawableStart="@drawable/ic_close_black_24dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_gravity="end|top"
        android:layout_height="wrap_content" />
</FrameLayout>