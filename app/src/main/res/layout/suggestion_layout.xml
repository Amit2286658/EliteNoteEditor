<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="NewApi">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_new_search_black_24dp"
        android:id="@+id/suggestion_icon"
        android:layout_gravity="center"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="suggestion"
        android:textSize="14sp"
        android:id="@+id/suggestion_text_view"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/suggestion_fill_icon"
        android:src="@drawable/ic_call_made_black_24dp"
        android:layout_gravity="center"
        android:rotation="270"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/suggestion_clear_icon"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content" />
</LinearLayout>