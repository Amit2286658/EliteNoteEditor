<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"

        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="48dp"
        android:layout_gravity="center"
        android:id="@+id/content_class_note_image_view"
        android:layout_margin="8dp"
        android:layout_height="48dp">
    <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
        android:id="@+id/content_class_note_content_view"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="24dp"
            android:visibility="gone"
            android:layout_height="24dp"
            android:id="@+id/content_class_note_play_view"
            android:layout_gravity="center"
            android:src="@drawable/play"
            />
    </FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/listItemViewContainer"
              android:paddingBottom="8dp"
>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/listViewTitle"
              android:text="Title 1"
              android:maxLines="1"
              android:ellipsize="end"
              android:paddingTop="8dp"
              android:paddingLeft="@dimen/idleContentPadding"
              android:paddingRight="@dimen/idleContentPadding"
              android:paddingBottom="8dp"

              android:textSize="16sp"
              android:singleLine="true"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/listViewTime"
              android:textSize="12sp"
              android:textColor="?colorAccent"
              android:text="14/02/2019"
              android:paddingLeft="@dimen/idleContentPadding"
              android:paddingRight="@dimen/idleContentPadding"
    /><LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:paddingLeft="@dimen/idleContentPadding"
            android:paddingRight="@dimen/idleContentPadding"
            android:layout_weight="1"
    >
        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:id="@+id/content_class_holder_folder_icon"
        />
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:textSize="12sp"
                  android:layout_marginStart="2dp"
                  android:textColor="?colorAccent"
                  android:ellipsize="end"
                  android:id="@+id/listViewFolder"
                  android:layout_height="wrap_content"
                  android:singleLine="true"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:id="@+id/item_menu"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:id="@+id/list_divider"
        android:layout_marginStart="76dp"
        android:background="?android:attr/listDivider"
        android:layout_height="1dp"/>
</LinearLayout>