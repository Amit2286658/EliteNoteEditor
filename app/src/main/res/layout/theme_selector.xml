<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:text="Select theme"
              android:id="@+id/preferenceThemeSelector_title"
              android:layout_centerVertical="true"
              android:textSize="16sp"
              android:textColor="?android:attr/textColorPrimary"
    />
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:id="@+id/DarkThemeCheckFrameLayout"
                 android:layout_height="wrap_content">
    <TextView android:layout_width="25dp"
              android:layout_margin="8dp"
              android:id="@+id/themeSelectDark"
              android:layout_height="25dp"
              android:textColor="#ffffff"
              android:gravity="center"
              android:text="T"
              android:background="#383838"
    />
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/DarkThemeCheckImage"
                   android:src="@drawable/ic_check_blue_24dp"
                   android:layout_gravity="center"
        />
    </FrameLayout>
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_toStartOf="@id/DarkThemeCheckFrameLayout"
                 android:id="@+id/LightThemeCheckFrameLayout"
                 android:layout_height="wrap_content">
    <TextView android:layout_width="25dp"
              android:layout_margin="8dp"
              android:layout_height="25dp"
              android:id="@+id/themeSelectLight"
              android:textColor="#000000"
              android:gravity="center"
              android:text="T"
              android:background="#cfcfcf"
    />
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:id="@+id/LightthemeCheckImage"
                   android:src="@drawable/ic_check_blue_24dp"
        />
    </FrameLayout>
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_toStartOf="@id/LightThemeCheckFrameLayout"
                 android:id="@+id/BaseThemeCheckFrameLayout"
                 android:layout_height="wrap_content">
    <TextView android:layout_width="25dp"
              android:layout_margin="8dp"
              android:id="@+id/themeSelectBase"
              android:layout_height="25dp"
              android:gravity="center"
              android:textColor="#ffffff"
              android:text="T"
              android:background="@drawable/rectangle_background"
    />
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/BaseThemeCheckImage"
                   android:src="@drawable/ic_check_blue_24dp"
                   android:layout_gravity="center"
        />
    </FrameLayout>
</RelativeLayout>
