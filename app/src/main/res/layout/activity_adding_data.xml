        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.me.android.noteeditor.AddingDataActivity"
    >
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/15/2019 2:04 am"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:format12Hour="MMM/dd/yyyy hh:mm:ss aa"
        android:format24Hour="MMM/dd/yyyy hh:mm:ss aa"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="?colorAccent"
        android:id="@+id/editingActivityTime"
    />
