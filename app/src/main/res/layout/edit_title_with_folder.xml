<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:text="Edit Title"
              android:textColor="?android:attr/textColorPrimary"
              android:textSize="14sp"
    />
    <com.google.android.material.textfield.TextInputLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:id="@+id/editTitle_inputLayout_withFolder"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginStart="16dp"
            android:hint="Title"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/editTitle_inputEditText_withFolder"
                android:inputType="textCapSentences"
                android:layout_height="wrap_content"
                android:singleLine="true"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:text="Select folder"
              android:textColor="?android:attr/textColorPrimary"
              android:textSize="14sp"
    />
    <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/folderSelector"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:textSize="14sp"
                android:id="@+id/custom_dialog_negative_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                android:text="Discard"
        />
        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/custom_dialog_negative_button"
                android:textSize="14sp"
                android:id="@+id/custom_dialog_positive_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="wrap_content"
                android:text="Save"
        />
    </RelativeLayout>
</LinearLayout>